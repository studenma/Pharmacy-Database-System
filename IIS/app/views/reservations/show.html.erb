<h3><%= @reservation.customer %> - <%= @reservation.date.strftime("%d.%m. %Y") %></h3>

<div class="table-responsive well">
	<table class="table">
	    <thead>
	      <tr>
	        <th>Název léku</th>
	        <th>Množství</th>
	      </tr>
	    </thead>
	    <tbody>
	      <% @reservation.reservation_drugs.each do |reservation| %>
	        <tr>
	        	<td><%= reservation.drug.name %></td>
	        	<td><%= reservation.amount %></td>
	        </tr>
	      <% end %>
	    </tbody>
    </table>
</div>
<%= link_to 'Upravit', edit_reservation_path(@reservation) %> |
<%= link_to 'Zpět', reservations_path %>