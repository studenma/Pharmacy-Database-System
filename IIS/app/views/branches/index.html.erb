<h1>Pobočky</h1>
<div class="table-responsive well">
  <table class="table">
    <thead>
      <tr>
        <th>Adresa</th>
        <th class='text-center'>Seznam zaměstnanců</th>
        <th class='text-center'>Upravit adresu</th>
        <th class='text-center'>Smazat pobočku</th>
      </tr>
    </thead>

    <tbody>
      <% @branches.each do |branch| %>
        <tr>
          <td><%= branch.address %></td>
          <td class='text-center'><%= link_to "<span class='glyphicon glyphicon-eye-open'> </span>".html_safe, branch %></td>
          <td class='text-center'><%= link_to "<span class='glyphicon glyphicon-pencil'> </span>".html_safe, edit_branch_path(branch) %></td>
          <td class='text-center'><%= link_to "<span class='glyphicon glyphicon-remove-sign'> </span>".html_safe, branch, method: :delete, data: { confirm: 'Jste si jisti?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
    <%= paginate @branches %>
  
</div>

<br>

<%= button_to 'Přidat pobočku', new_branch_path, method: :get  %>
