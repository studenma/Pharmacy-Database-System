<%= simple_form_for(@insurer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name, label: 'Jméno', required: true %>
  	<%= f.input :code, label: 'Číslo pojišťovny', required: true %>
  	<%= f.input :orgid, label: 'IČO', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "Potvrdit" %>
  </div>
<% end %>
