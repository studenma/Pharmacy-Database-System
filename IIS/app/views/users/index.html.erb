<h1>Uživatelé</h1>


<div class="table-responsive well">
  <table class="table">
    <thead>
      <tr>
        <th>Jméno</th>
        <th>Email</th>
        <th>Pobočka</th>
        <th>Role</th>
        <th class='text-center'>Detail</th>
        <th class='text-center'>Upravit</th>
        <th class='text-center'>Smazat</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.branch.address %></td>
          <td><%= user.role %></td>
          <td class='text-center'><%= link_to "<span class='glyphicon glyphicon-eye-open'> </span>".html_safe, user %></td>
          <td class='text-center'><%= link_to "<span class='glyphicon glyphicon-pencil'> </span>".html_safe, edit_user_path(user) %></td>
          <td class='text-center'><%= link_to "<span class='glyphicon glyphicon-remove-sign'> </span>".html_safe, user, method: :delete, data: { confirm: 'Jste si jisti?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @users %>

</div>

<br>

<%= button_to 'Nový uživatel', new_user_path, method: :get  %>
