<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true %>
    <%= f.input :password, label: 'Heslo', required: true %>
    <%= f.input :name, label: 'Jméno a příjmení', required: true %>
    <%= f.input :branch_id, label: 'Pobočka', :collection => Branch.all, :label_method => :address,:value_method => :id,:label => "Pobočka", :include_blank => false %>
    <%= f.input :role, label: 'Pozice', include_blank: false%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "Potvrdit" %>
  </div>
<% end %>
