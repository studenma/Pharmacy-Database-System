<h2><%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :name, label: 'Jméno', required: true%>
    <%= f.input :branch_id, label: 'Pobočka', collection: Branch.all, required: true %>
    <%= f.input :password, label: 'Heslo', autocomplete: "off", hint: "Ponechte prázdné pokud nechcete změnit heslo", required: false %>
    <%= f.input :password_confirmation, label: 'Potvrdit heslo', required: false %>
    <%= f.input :current_password, label: 'Momentální heslo', hint: "Zadejte své heslo pro potvrzení změn", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Provést úpravu" %>
  </div>
<% end %>

<%= link_to "Zpět", :back %>
