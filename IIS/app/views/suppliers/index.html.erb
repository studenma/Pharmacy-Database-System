<h1>Dodavatelé</h1>
<div class="table-responsive well">
  <table class="table">
    <thead>
      <tr>
        <th>Název</th>  
        <th class='text-center'>Detail</th>
        <th class='text-center'>Upravit</th>
        <th class='text-center'>Smazat</th>
      </tr>
    </thead>

    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= supplier.name %></td>
          <td class='text-center'><%= link_to "<span class='glyphicon glyphicon-eye-open'> </span>".html_safe, supplier %></td>
          <td class='text-center'><%= link_to "<span class='glyphicon glyphicon-pencil'> </span>".html_safe, edit_supplier_path(supplier) %></td>
          <td class='text-center'><%= link_to "<span class='glyphicon glyphicon-remove-sign'> </span>".html_safe, supplier, method: :delete, data: { confirm: 'Jste si jisti?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
    <%= paginate @suppliers %>
  
</div>

<br>

<%= button_to 'Nový dodavatel', new_supplier_path, method: :get  %>
